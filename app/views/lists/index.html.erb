<div class="banner" style="background-image: url(<%=@movies_picture.poster_url%>);">
  <div class="container">
    <p class="day">Film du jour</p>
    <div class="row">
      <div class="col-6">
        <h4 class="film_day"><%=@movies_picture.title.upcase%></h4>
        <p class="day"><%=@movies_picture.overview%></p>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <h3 class="list mt-4">MY LISTS</h3>
  <div class="cards">
    <% @lists.each do |list| %>
      <div class="card-category" style="background-image:url(<%= cl_image_path(list.photo.key, height: 300, crop: :fill)%>);">
        <h2> <%= link_to list.name, list_path(list) %> </h2>
      </div>
    <% end %>
  </div>
</div>

<div class="footer mb-4">

</div>
