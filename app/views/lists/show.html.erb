<div class="container-fluid">
  <div class="container mb-4 mt-4"><h2><%= @list.name %></h2></div>

  <div class="container mb-4">

      <% @list.bookmarks.each do |bookmark| %>
        <div class="card-trip">
          <%= image_tag bookmark.movie.poster_url %>
          <div class="card-trip-infos">
            <div>
              <h2><%= bookmark.movie.title %></h2>
              <p><%= bookmark.movie.overview %></p>
            </div>
            <div class="div">
             <h2 class="card-trip-pricing"><%= bookmark.movie.rating %></h2>
             <%# <i class="fa-solid fa-star"></i> %>
            </div>
          </div>
          <div class="card-trip-infos">
            <p> Comment : <%= bookmark.comment %> </p>
            <p> <%= link_to "Delete",
                    bookmark_path(bookmark),
                    method: :delete,
                    data: { confirm: "Are you sure?" } %> </p>
           </div>
      <% end %>

  </div>

  <div class="row mt-4">
    <div class="col-12">
      <%= link_to 'Add a movie', new_list_bookmark_path(@list), class: 'btn btn-ghost' %>
      <%= link_to "Back", lists_path%>
    </div>
  </div>

</div>
