<div class="container">

      <h1 class="text-right mt-4"><%= @list.name.upcase %></h1>


      <% @list.bookmarks.each do |bookmark| %>
        <div class="card-trip mt-4">
          <%= image_tag bookmark.movie.poster_url %>
          <div class="card-trip-infos">
            <div>
              <div class="row mt-2">
                <div class="col-6">
                  <h2><%= bookmark.movie.title.upcase %></h2>
                  <p class="mt-3"><%= bookmark.movie.overview %></p>
                </div>
              </div>
            </div>
            <div class="">
             <h2 class="card-trip-pricing"><%= bookmark.movie.rating %> <i class="fa-solid fa-star-sharp"></i></h2>
            </div>
          </div>
          <div class="card-trip-infos">
            <p> Comment : <%= bookmark.comment %> </p>
            <p> <%= link_to "Delete",
                bookmark_path(bookmark),
                method: :delete,
                data: { confirm: "Are you sure?" } %> </p>
           </div>
      <% end %>

  </div>

  <div class="row mt-4">
    <div class="col-12">
      <%= link_to 'Add a movie', new_list_bookmark_path(@list), class: 'btn btn-ghost' %>
      <%= link_to "Back", root_path%>
    </div>
  </div>

</div>
