<div class="container">

      <h1 class="text-right mt-4"><%= @list.name.upcase %></h1>
      <%= link_to 'Add a movie', new_list_bookmark_path(@list) %>


      <% @list.bookmarks.each do |bookmark| %>
        <div class="card-trip mt-4">
          <%= image_tag bookmark.movie.poster_url %>
          <div class="card-trip-infos">
            <div>
              <div class="row mt-2">
                <div class="col-6">
                  <h2 class="title_movie"><%= bookmark.movie.title.upcase %></h2>
                  <p class="mt-3"><%= bookmark.movie.overview %></p>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col">
                 <h2 class="card-trip-pricing text-center"><i class="fas fa-star mt-4" id="star"></i><%= bookmark.movie.rating %></h2>
              </div>
            </div>
          </div>
          <div class="card-trip-infos">
            <p> <i class="fas fa-comment-alt" id="comment"></i> <%= bookmark.comment %> </p>
            <p> <%= link_to "Delete",
                bookmark_path(bookmark),
                method: :delete,
                data: { confirm: "Are you sure?" } %> </p>
           </div>
      <% end %>

  </div>

  <div class="row mt-4 mb-4">
    <div class="col-12">
      <%= link_to "Back", root_path%>
    </div>
  </div>

</div>
